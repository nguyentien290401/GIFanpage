@model IEnumerable<GIFanpage.Models.Ask>

@{
    ViewBag.Title = "IndexQuestions";
}

<h2>IndexQuestion</h2>

<div class="w3-container" style="padding:128px 16px">
    <h1 class="title">My Ideas</h1>
    @foreach (var item in Model)
    {
        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="user d-flex flex-row align-items-center">
                    <span class="font-weight-bold text-primary">
                        <a href="/asks/details/@item.AskID">@item.Title</a>
                    </span>
                </div> 
                <small><i class="fa fa-calendar fa-fw w3-margin-right"></i> @item.CreateDate</small>
            </div>
            <div class="action d-flex justify-content-between mt-2 align-items-center">
                <div class="reply px-4"> 
                    <small><a href="/asks/edit/@item.AskID">Edit</a></small> 
                    <span class="dots"></span> 
                    <small><a href="/asks/delete/@item.AskID">Delete</a></small> 
                </div>
                <div class="icons align-items-center"> 
                    <i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount 
                </div>
            </div>
        </div>
    }
</div>

