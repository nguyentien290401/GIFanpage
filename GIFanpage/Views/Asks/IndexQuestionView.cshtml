            <br /><br />


        </form>*@
            @if (ViewBag.Msg == null)
            {
                foreach (var item in Model)
                {
                    <div class="card p-3" style="margin-bottom: 10px;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="user d-flex flex-row align-items-center">
                                <span class="font-weight-bold text-primary">
                                    <a href="/asks/details?ask=@item.AskID" style="text-decoration: none;">@item.Title</a>
                                </span>
                            </div>
                            <small><i class="fa fa-calendar fa-fw w3-margin-right"></i> @item.CreateDate</small>
                        </div>
                        <div class="action d-flex justify-content-between mt-2 align-items-center">
                            <div class="reply px-4">
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-comment"></i>  @item.CommentCount</button>
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-address-book"></i>  @item.Category.CategoryName</button>
                                @*<button type="button" class="w3-button w3-theme-d2 w3-margin-bottom"><i class="fa fa-thumbs-up"></i>  @item.VotesCount</button>*@
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-eye"></i>  @item.ViewCount</button>
                                @*<small><a href="/asks/edit/@item.AskID" style="text-decoration: none;">Edit</a></small>
                            <span class="dots"></span>
                            <small><a href="/asks/delete/@item.AskID" style="text-decoration: none;">Delete</a></small>*@
                            </div>
                            <div class="icons align-items-center">
                                <i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount @item.Description @item.Content
                            </div>
                        </div>
                    </div>

                }
            }

