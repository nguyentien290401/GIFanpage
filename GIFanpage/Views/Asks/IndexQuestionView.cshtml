@model IEnumerable<GIFanpage.Models.Ask>

@{
    ViewBag.Title = "IndexQuestionView";
}

<h2>IndexQuestionView</h2>



<div class="container" style="margin-top: 18px; margin-bottom: 15px; min-height: 437px; margin-top: 30px;">
    
    <div class="row  d-flex justify-content-center">
        <br />
        <div class="col-md-10">
            @using (Html.BeginForm())
            {
                <div class="row d-flex justify-content-end">
                    <div class="col-md-5 d-flex ">
                        <a href="/asks/create" class="btn w3-button" style="text-decoration: none; color: white; background-color: #0a95ff"> Add question</a>
                    </div>
                    <div class="col-md-6">
                        <input type="search" name="Search" class="form-control" placeholder="Add the title content you want to find" />
                    </div>
                    <div class="col-md-1">
                        <button type="submit"><span class="fa fa-search form-control-feedback btn"></span></button>
                    </div>

                </div>
                <br />
            }
        </div>

        @if (ViewBag.Msg == null)
        {
            <div class="col-md-10">
                <h3>Display</h3>
            </div>
            foreach (var item in Model)
            {
                <div class="col-md-10">
                    <div class="card p-3" style="margin-bottom: 10px;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="user d-flex flex-row align-items-center">
                                <span class="font-weight-bold text-primary">
                                    <a href="/asks/details?ask=@item.AskID" style="text-decoration: none;">@item.Title</a>
                                </span>
                            </div>
                            <small><i class="fa fa-calendar fa-fw w3-margin-right"></i> @item.CreateDate</small>
                        </div>
                        <div class="action d-flex justify-content-between mt-2 align-items-center">
                            <div class="reply px-4">
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-comment"></i>  @item.CommentCount</button>
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-address-book"></i>  @item.Category.CategoryName</button>
                                @*<button type="button" class="w3-button w3-theme-d2 w3-margin-bottom"><i class="fa fa-thumbs-up"></i>  @item.VotesCount</button>*@
                                <button type="button" class="w3-button w3-theme-d2 "><i class="fa fa-eye"></i>  @item.ViewCount</button>
                                @*<small><a href="/asks/edit/@item.AskID" style="text-decoration: none;">Edit</a></small>
                                    <span class="dots"></span>
                                    <small><a href="/asks/delete/@item.AskID" style="text-decoration: none;">Delete</a></small>*@
                            </div>
                            <div class="icons align-items-center">
                                <i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount @item.Description @item.Content
                            </div>
                        </div>
                    </div>
                </div>

            }
        }

    </div>



</div>
<button onclick="topFunction()" class="btn btn-danger btn-floating btn-lg" id="myBtn" title="Go to top" style="position: fixed; right: 30px; bottom: 100px; display: none;">
    <i class="fa fa-arrow-up" aria-hidden="true"></i>
</button>


