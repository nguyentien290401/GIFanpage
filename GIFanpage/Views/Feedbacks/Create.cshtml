@model GIFanpage.Models.Feedback

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    <div class="container mt-4 shadow-lg">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <input type="text" name="UserID" value="@Session["CurrentUserID"]" hidden />
                </div>
                @*<img src="~/Content/Image/PaimonQuestions.png" width="200" style="align-items: center;" />*@
            </div>
            <div class="col-md-6">
                <h2>Feedback Form</h2>
                <p>
                    Paimon would love to hear your thoughts, concerns or problem with anything
                    so we can improve!
                </p>
                <hr />

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h4>Feedback Type</h4>
                <div class="row">
                    <div class="col-md-4">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline1">Comments</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline1">Bug Reports</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                            <label class="custom-control-label" for="customRadioInline1">Questions</label>
                        </div>
                    </div>
                </div>
                <form class="needs-validation" novalidate>
                    <div class="form-group mt-3 mb-3">
                        <label for="validationDefault01" class="form-label"> Title</label>
                        <input type="text" name="FeedbackTitle" class="form-control" id="validationDefault01" required />
                        <div class="invalid-feedback">
                            Please fullfill this field
                        </div>
                    </div>

                    <div class="form-group mb-2">
                        <label for="validationDefault02" class="form-label"> Describe Feedback</label>
                        <textarea rows="4" name="FeedbackContent" class="form-control" id="validationDefault02" required></textarea>
                    </div>
                    <div class="invalid-feedback">
                        Please fullfill this field
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

        </div>
        <hr />
    </div>
}

