@model GIFanpage.Models.Character

@{
    ViewBag.Title = "Create";
}

<style>
    .form-group, input {
        margin-top: 10px;
    }
</style>


<h2>Create</h2>

<div class="container p-5" style="margin-top: 18px; margin-bottom: 15px; min-height: 448px;">
    <div class="row  d-flex justify-content-center shadow-lg">
        <div class="col-md-10">
            <h2 style="padding-top: 20px;x">Character's Information Form</h2>
            <p class="text-secondary" style="font-size: 14px;">
                Figure out the information of Character in Teyvat world
            </p>
            <hr />

            <form action="/characters/create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row  d-flex justify-content-center">
                    <div class="form-group col-md-6">
                        <label for="CharacterName">Character's Name</label>
                        <input type="text" name="CharacterName" class="form-control" placeholder="" id="CharacterName" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="CharacterVision">Vision</label>
                        <input type="text" name="CharacterVision" class="form-control" placeholder="" id="CharacterVision" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterVision, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="CharacterRarity">Rarity</label>
                        <input type="text" name="CharacterRarity" class="form-control" placeholder="" id="CharacterRarity" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterRarity, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        <label for="CharacterName">Birthday</label>
                        <input type="date" name="CharacterBirthday" class="form-control" placeholder="" id="CharacterName" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterBirthday, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="CharacterRegion">Region</label>
                        <input type="text" name="CharacterRegion" class="form-control" placeholder="" id="CharacterRegion" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterRegion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Content</label>
                        <textarea rows="3" name="CharacterDescription" class="form-control" required></textarea>
                        @Html.ValidationMessageFor(model => model.CharacterDescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-7">
                        <label>Image Card</label>
                        <br />
                        <input type="file" name="fileCard" class="form-control-file" required>
                    </div>

                    <div class="form-group col-md-5">
                        <label>Image Origination</label>
                        <br />
                        <input type="file" name="fileOriginal" class="form-control-file" required>
                    </div>
                    <div class="col-md-12" style="display: flex; justify-content: flex-start; margin-top: 15px; margin-bottom: 20px;">
                        <button type="submit" class="btn btn-primary" id="add-button" style="top: auto; left: 0;">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


