@model GIFanpage.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-bottom: 30px;">
    <div class="row px-5  d-flex justify-content-center">
        <div class="col-md-10">
            <div style="display:inline-flex; width: 100%;">
                <div>
                    <h2 class="text-danger" style="padding-top: 20px;">Delete Category's Question</h2>
                    <i class="text-secondary" style="font-size: 14px;">
                        Are you sure you want to delete this Category's question ?
                    </i>
                </div>
                <a href="/admin/categoryQuestion/index" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
                    <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit"><i class="pe-7s-back btn-icon-wrapper"> Back to List</i></button>
                </a>
            </div>
            <hr />

                <div class="row  d-flex justify-content-center">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CategoryDescription)
                        </dd>

                    </dl>
                    <div class="col-md-12" style="display: flex; justify-content: flex-start; margin-top: 10px; margin-bottom: 15px;">
                        <form action="/admin/categoryQuestion/delete?id=@Model.CategoryID" method="post" enctype="multipart/form-data" style="text-decoration: none;">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-lg btn-danger btn-login fw-bold text-uppercase" type="submit"><i class="pe-7s-trash btn-icon-wrapper"> Delete</i></button>
                        </form>
                    </div>
                </div>
            
        </div>
    </div>
</div>
