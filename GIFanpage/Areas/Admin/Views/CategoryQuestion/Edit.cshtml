@model GIFanpage.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card" style="margin-bottom: 30px;">
    <div class="row px-5  d-flex justify-content-center">
        <div class="col-md-10">
            <div style="display:inline-flex; width: 100%;">
                <div>
                    <h2 style="padding-top: 20px;">Edit Category's Question</h2>
                    <i class="text-secondary" style="font-size: 14px;">
                        Update more information of Teyvat world
                    </i>
                </div>
                <a href="/admin/categoryQuestion/index" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
                    <button class="btn btn-lg btn-primary btn-login fw-bold " type="submit"> Back to List</button>
                </a>
            </div>
            <hr />

            <form action="/admin/categoryQuestion/edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoryID)
                <div class="row  d-flex justify-content-center">
                    <div class="form-group col-md-12">
                        <label for="CategoryName" class="fw-bolder">Category's Name</label>
                        <input type="text" name="CategoryName" class="form-control" value="@Model.CategoryName" id="CategoryName" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="CategoryDescription" class="fw-bolder">Category's Description</label>
                        <input type="text" name="CategoryDescription" class="form-control" value="@Model.CategoryDescription" id="CategoryDescription" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12" style="display: flex; justify-content: flex-start; margin-top: 15px; margin-bottom: 20px;">
                        <button class="btn  btn-primary btn-login fw-bold " type="submit"> Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>