@model IEnumerable<GIFanpage.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FeedbackTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeedbackContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new { id = item.FeedbackID })
            </td>
        </tr>
    }

</table>

<div>
    @using (Html.BeginForm("ExportToExcel", "FeedbackUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>

            <input type="submit" value="Export" class="btn-primary" />
        </div>

    }
</div>
