@model GIFanpage.Models.Character

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card" style="margin-bottom: 30px;">
    <div class="row px-5  d-flex justify-content-center">
        <div class="col-md-10">
            <div style="display:inline-flex; width: 100%;">
                <div>
                    <h2 style="padding-top: 20px;">Character's Information Form</h2>
                    <i class="text-secondary" style="font-size: 14px;">
                        Figure out the information of Character in Teyvat world
                    </i>
                </div>
                <a href="/admin/characterInfo/index" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
                    <button class="btn btn-lg btn-primary btn-login fw-bold " type="submit">Back to List</button>
                </a>
            </div>
            <hr />

            <form action="/admin/characterInfo/edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CharacterID)
                <div class="row  d-flex justify-content-center">
                    <div class="form-group col-md-6">
                        <label for="CharacterName" class="fw-bolder">Character's Name</label>
                        <input type="text" name="CharacterName" class="form-control" value="@Model.CharacterName" id="CharacterName" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="CharacterVision" class="fw-bolder">Vision</label>
                        <input type="text" name="CharacterVision" class="form-control" value="@Model.CharacterVision" id="CharacterVision" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterVision, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-3">
                        <label for="CharacterRarity" class="fw-bolder">Rarity</label>
                        <input type="text" name="CharacterRarity" class="form-control" value="@Model.CharacterRarity" id="CharacterRarity" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterRarity, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        <label for="CharacterName" class="fw-bolder">Birthday</label>
                        <input type="datetime" name="CharacterBirthday" class="form-control" value="@Model.CharacterBirthday" id="CharacterName" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterBirthday, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="CharacterRegion" class="fw-bolder">Region</label>
                        <input type="text" name="CharacterRegion" class="form-control" value="@Model.CharacterRegion" id="CharacterRegion" required style="margin-top:unset;">
                        @Html.ValidationMessageFor(model => model.CharacterRegion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label class="fw-bolder">Content</label>
                        <textarea rows="3" name="CharacterDescription" class="form-control" id="summernote" placeholder="@Html.Raw(Model.CharacterDescription)" required></textarea>
                        @Html.ValidationMessageFor(model => model.CharacterDescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        <label class="fw-bolder">Image Card</label>
                        <br />

                        <input type="file" name="fileCard" class="form-control-file" id="upload-button1" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" required hidden>
                        <label for="upload-button1" class="btn-success p-2" style="border-radius: 10px; cursor: pointer;">
                            &nbsp; Choose A Photo
                        </label>
                        <div class="image-card" style="display: flex; margin-top: 10px;">
                            <img src="@Url.Content(Model.CharacterImageCard)" width="200" id="previewImage" />
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="fw-bolder">Original Image</label>
                        <br />

                        <input type="file" name="fileOriginal" class="form-control-file" id="upload-button2" onchange="showImagePreview(this, document.getElementById('previewImg'))" required hidden>
                        <label for="upload-button2" class="btn-success p-2" style="border-radius: 10px; cursor: pointer;">
                            &nbsp; Choose A Photo
                        </label>
                        <div class="image-card" style="display: flex; margin-top: 10px;">
                            <img src="@Url.Content(Model.CharacterImageOriginal)" width="200" id="previewImg" />
                        </div>
                    </div>
                    <div class="col-md-12" style="display: flex; justify-content: flex-start; margin-top: 15px; margin-bottom: 20px;">
                        <button class="btn  btn-primary btn-login fw-bold " type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

