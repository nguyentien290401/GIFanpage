@model GIFanpage.Models.New

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>

    .container-fluid {
        padding: 0;
        margin: 0;
        position: relative;
    }

    .container a {
        text-decoration: none;
        color: aqua;
    }

        .container a:hover {
            color: ghostwhite;
        }

    .breadcrumb {
        background-color: unset;
    }

    .cate {
        border-top: #e8cba7 solid 6px;
    }

    .row .article {
        position: relative;
        background-color: #f0f0f0;
        padding: 79px 90px 115px;
        min-height: 600px;
        font-size: 0;
    }

    .article-title {
        line-height: 40px;
        font-size: 32px;
        color: #333;
    }

    .artical-date {
        margin-top: 13px;
        font-size: 16px;
        line-height: 22px;
        color: #999;
    }

    .artical__content {
        margin-top: 51px;
        font-size: 14px;
        color: #7d7d7d;
        line-height: 24px;
        display: flex;
        justify-content:center;
        flex-direction: column;
    }

        .artical__content > img {
            display: block;
            width: 100%;
            aspect-ratio: 28 / 13;
            object-fit: cover;
            object-position: center;
        }

    .buttonbar {
        position: absolute;
        left: 50%;
        bottom: 60px;
        display: flex;
        justify-content: space-between;
        width: 721px;
        margin: 24px 0 0 0;
        transform: translateX(-50%);
    }

    .buttonbar__prev, .buttonbar__next {
        width: 70px;
        height: 44px;
        background: #393b40 url(data:image/png;base64,) no-repeat center;
        background-size: 14px 23px;
        border-radius: 4px;
        opacity: 0.8;
        text-align: center;
        font-size: 16px;
        color: #ccc;
        cursor: pointer;
        text-decoration: none;
    }

    .buttonbar__prev {
        transform: rotate(180deg);
    }

    .container-fluid .container .buttonbar__next:hover, .container-fluid .container .buttonbar__prev:hover {
        color: gainsboro;
    }
</style>

<div class="container-fluid" style=" padding-top:20px; min-height: 700px; background: rgb(2,0,36); background: linear-gradient(180deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 12%, rgba(0,212,255,1) 97%);">
    <div class="container px-5 py-2">
        <div class="row" >
            <div class="col-sm-8 col-md-9">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard/index">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/newInfo/index">News</a></li>
                        <li class="breadcrumb-item active" aria-current="page" style="color: white;">@Model.NewsTitle</li>
                    </ol>

                </nav>
            </div>
            <div class="col-sm-4 col-md-3" style="position: relative; padding-right:unset; display: flex; justify-content: flex-end;">
                <nav aria-label="breadcrumb ">

                    <ol class="breadcrumb ">
                        <li class="breadcrumb-item"><a href="/admin/newInfo/index">Back to News</a></li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row cate" style="position: relative; background-color: #f0f0f0; padding: 40px 45px 80px; min-height: 600px; font-size: 0;">
            <div class="article-title">
                @Model.NewsTitle
            </div>
            <div class="artical-date">
                Date Posted @Model.CreateDate.Month / @Model.CreateDate.Day / @Model.CreateDate.Year
            </div>
            <div class="artical__content">
                <img src="@Url.Content(Model.NewsImage)" style="max-width: 100%; margin-bottom: 20px;">
                @Html.Raw(Model.NewsContent)
            </div>

            <div style="display: flex; justify-content: space-between; margin-top: 20px;">
                @{

                    int Page = Model.NewsID;
                    var nextPage = Page + 1;
                    var prevPage = Page - 1;

                        <a href="/admin/newInfo/details?newInfo=@prevPage" class="buttonbar__prev"></a>
                        <a href="/admin/newInfo/details?newInfo=@nextPage" class="buttonbar__next "></a>
                }

            </div>
            @ViewBag.totalNumberNews;
        </div>

    </div>
</div>


