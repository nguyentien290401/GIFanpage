@model GIFanpage.Models.New

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<style>

    .form-group, input {
        margin-top: 10px;
    }

        .form-group label {
            font-weight: bolder;
        }

    .image-card {
        display: flex;
        justify-content: center;
        margin-top: 10px;
        max-width: 100%;
    }
</style>

<div class="card my-4">
    <div class="row px-4  d-flex justify-content-center">
        <div class="col-md-10">
            <div style="display:inline-flex; width: 100%;">
                <div>
                    <h2 style="padding-top: 20px;">Edit Article Form</h2>
                    <i class="text-secondary" style="font-size: 14px;">
                        Update hot news in Teyvat world !!!
                    </i>
                </div>
                <a href="/admin/newInfo/index" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
                    <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit"><i class="pe-7s-back btn-icon-wrapper"> Back to List</i></button>
                </a>
            </div>
            <hr />
            <form action="/admin/newInfo/edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.CreateDate, new { @Value = DateTime.Now, @type = "hidden" })
                <div class="row  d-flex justify-content-center">
                    <div class="form-group col-md-12">
                        <label for="NewsTitle">New's Title</label>
                        <input rows="2" name="NewsTitle" id="NewsTitle" class="form-control" value="@Model.NewsTitle" required/>
                        @Html.ValidationMessageFor(model => model.NewsTitle, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="NewsDescription">New's Description</label>
                        <input rows="2" name="NewsDescription" id="NewsDescription" class="form-control" value="@Model.NewsDescription" required/>
                        @Html.ValidationMessageFor(model => model.NewsDescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-12">
                        <label>Image News</label>
                        <br />
                        <input type="file" name="fileNew" class="form-control-file" id="upload-button1" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" required hidden>
                        <label for="upload-button1" class="btn-success p-2" style="border-radius: 10px; cursor: pointer;">
                            <i class="fa fa-download" aria-hidden="true"></i> &nbsp; Choose A Photo
                        </label>
                        <div class="image-card">
                            <img src="@Url.Content(Model.NewsImage)" width="400" id="previewImage"/>
                        </div>
                    </div>
                    <div class="form-group">

                        <label>New's Content</label>

                        <textarea rows="5" name="NewsContent" id="summernote" class="form-control" required></textarea>
                        @Html.ValidationMessageFor(model => model.NewsContent, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12" style="margin-bottom: 10px;">
                        <button class="btn  btn-primary btn-login fw-bold " type="submit"><i class="fa fa-floppy-o" aria-hidden="true"> Save</i></button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({

        tabsize: 2,
        height: 200,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>


<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NewsID)

        <div class="form-group">
            @Html.LabelFor(model => model.NewsTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsImage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewsContent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsContent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
