@model GIFanpage.Models.Ask

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div style="display: inline-flex; align-items: center; min-width: 100%;">
    <h2>Question's User</h2>
    <div style="display: inline-flex; gap: 10px; margin-left:auto; align-items: center; margin-bottom: 20px;">
        <a href="/admin/questionManage/edit?id=@Model.AskID" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
            <button class="btn btn-lg btn-success btn-login fw-bold " type="submit">Edit</button>
        </a>
        <a href="/admin/questionManage/index" style="text-decoration: none; margin-left: auto; margin-top: 30px;">
            <button class="btn btn-lg btn-primary btn-login fw-bold " type="submit">Back to List</button>
        </a>
    </div>
</div>

<div class="card p-4" style="margin-bottom: 20px;">

    <div class="d-flex  align-items-center" style="max-width: 100%;">

        <div class="user d-flex flex-row" style="display: flex; align-items: flex-start;">   
            <img src="@Url.Content(Model.User.UserImg)" width="45" height="45" class="user-img rounded-circle mr-2" style="display:flex; align-items:flex-start;">
          
            <span style="padding-left: 15px; min-width: 100%;">
                <small class="font-weight-bold text-dark" style="font-size: 20px; display: block;"> @Model.Title </small>
                <small class="font-weight-bold text-white" style="font-size:20px; color: white; cursor:unset;"> (Genshin impact is an story game that tell that tell about traveler's Aether) </small>
                <br />
                <span style="display: flex; align-items: center;">
                    <small class="font-weight-bold text-primary" style="font-size: 16px; padding-right: 10%;"> @Model.User.Name</small>
                    <small class="font-weight-light text-secondary" style="padding-right: 10%;"> @Model.CreateDate</small>
                    <small class="font-weight-light text-secondary" style="padding-right: 10%;">View: @Model.ViewCount</small>
                    <small class="font-weight-light text-secondary" style="padding-right: 10%;">View: @Model.Category.CategoryName</small>
                    <small class="font-weight-light text-secondary">Comments: @Model.CommentCount</small>
                </span>
                <hr />
               
                <p style="padding-top: 8px;">@Html.Raw(Model.Content)</p>
            </span>
        </div>
    </div>
</div>

